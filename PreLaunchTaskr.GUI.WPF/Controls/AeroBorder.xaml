<UserControl
    x:Class="PreLaunchTaskr.GUI.WPF.Controls.AeroBorder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PreLaunchTaskr.GUI.WPF.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:AeroBorder}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <Line HorizontalAlignment="Stretch">
                <Line.Stroke>
                    <SolidColorBrush Color="Red" />
                </Line.Stroke>
            </Line>
            <Line HorizontalAlignment="Stretch">
                <Line.Stroke>
                    <SolidColorBrush Color="Blue" />
                </Line.Stroke>
            </Line>
        </StackPanel>

        <ContentPresenter Content="{Binding Content}" />

        <StackPanel>
            <Line HorizontalAlignment="Stretch">
                <Line.Stroke>
                    <SolidColorBrush Color="Red" />
                </Line.Stroke>
            </Line>
            <Line HorizontalAlignment="Stretch">
                <Line.Stroke>
                    <SolidColorBrush Color="Blue" />
                </Line.Stroke>
            </Line>
        </StackPanel>
    </Grid>
</UserControl>
