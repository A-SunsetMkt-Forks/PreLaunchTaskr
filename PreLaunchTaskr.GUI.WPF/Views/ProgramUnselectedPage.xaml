<Page
    x:Class="PreLaunchTaskr.GUI.WPF.Views.ProgramUnselectedPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PreLaunchTaskr.GUI.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:my="clr-namespace:PreLaunchTaskr.GUI.WPF.Controls"
    Title="ProgramUnselectedPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <my:MyStackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            ContentHorizontalAlignment="Center">

            <my:GlowingTextBlock
                Opacity="0.5"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="PreLaunchTaskr" />

            <my:GlowingTextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Opacity="0.5"
                Text="配置应用程序启用前的行为：处理启动参数、执行某些任务、设置环境变量" />

            <my:GlowingTextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Opacity="0.5"
                Text="从应用程序列表中选择一项以配置" />
        </my:MyStackPanel>
    </Grid>
</Page>
