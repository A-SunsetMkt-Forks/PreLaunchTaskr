<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="PreLaunchTaskr.GUI.WinUI3.Views.ProgramUnselectedPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:PreLaunchTaskr.GUI.WinUI3.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:my="using:PreLaunchTaskr.GUI.WinUI3.Controls"
    mc:Ignorable="d">

    <Grid>
        <my:MyStackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            ContentHorizontalAlignment="Center">

            <TextBlock
                Opacity="0.5"
                Style="{ThemeResource HeaderTextBlockStyle}"
                Text="PreLaunchTaskr" />

            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Opacity="0.5"
                Text="配置应用程序启用前的行为：处理启动参数、执行某些任务、设置环境变量" />

            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Opacity="0.5"
                Text="从应用程序列表中选择一项以配置" />
        </my:MyStackPanel>
    </Grid>
</Page>
